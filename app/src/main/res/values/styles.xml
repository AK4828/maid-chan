<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppButtonPrimary" parent="Base.Widget.AppCompat.Button.Small">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>


    <style name="ButtonBlue">
        <item name="android:textSize">@dimen/txt_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>
    <style name="ButtonTransparent">
        <item name="android:textSize">@dimen/txt_btn</item>
        <item name="android:textColor">@color/textParagraph</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
